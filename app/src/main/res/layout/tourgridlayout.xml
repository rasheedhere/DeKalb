<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="match_parent" android:layout_width="match_parent">
   <RelativeLayout
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tour1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/tourphotos1"
        android:layout_below="@+id/tour1"
        android:layout_gravity="center_vertical"
        android:columnWidth="50dp"
        android:verticalSpacing="60dp"
        android:horizontalSpacing="30dp"
        android:stretchMode="columnWidth"
        android:numColumns="auto_fit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tour2"
        android:layout_below="@+id/tourphotos1"
     />

       <GridView
           android:layout_width="wrap_content"
           android:layout_height="80dp"
           android:id="@+id/tourphotos2"
           android:layout_below="@+id/tour2"
           android:layout_gravity="center_vertical"
           android:columnWidth="50dp"
           android:verticalSpacing="60dp"
           android:horizontalSpacing="30dp"
           android:stretchMode="columnWidth"
           android:numColumns="auto_fit" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textAppearance="?android:attr/textAppearanceLarge"
           android:id="@+id/tour3"
